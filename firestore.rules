rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isManager() {
      return isSignedIn() && 
             (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager');
    }
    
    function emailVerified() {
      return request.auth.token.email_verified == true;
    }
    
    // Users collection
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if isOwner(userId);
      
      // Allow users to create their own profile during signup
      allow create: if isSignedIn() && 
                      isOwner(userId) &&
                      request.resource.data.email == request.auth.token.email;
      
      // Allow users to update their own profile (limited fields)
      allow update: if isOwner(userId) && 
                      // Can only update these fields
                      !request.resource.data.diff(resource.data).affectedKeys()
                        .hasAny(['role', 'permissions', 'createdAt']);
      
      // Only admins can delete user profiles
      allow delete: if isAdmin();
      
      // Admins can read/write all user profiles
      allow read, write: if isAdmin();
    }
    
    // Products collection
    match /products/{productId} {
      // Everyone can read products
      allow read: if isSignedIn();
      
      // Only managers and admins can create/update/delete products
      allow create, update, delete: if isManager();
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Everyone can read orders
      allow read: if isSignedIn();
      
      // Everyone can create orders
      allow create: if isSignedIn();
      
      // Only managers and admins can update/delete orders
      allow update, delete: if isManager();
    }
    
    // Sales collection
    match /sales/{saleId} {
      // Everyone can read sales
      allow read: if isSignedIn();
      
      // Everyone can create sales
      allow create: if isSignedIn();
      
      // Only managers and admins can update/delete sales
      allow update, delete: if isManager();
    }
    
    // Customers collection
    match /customers/{customerId} {
      // Everyone can read customers
      allow read: if isSignedIn();
      
      // Everyone can create customers
      allow create: if isSignedIn();
      
      // Only managers and admins can update/delete customers
      allow update, delete: if isManager();
    }
    
    // Reports collection (optional)
    match /reports/{reportId} {
      // Everyone can read reports
      allow read: if isSignedIn();
      
      // Only managers and admins can create/update/delete reports
      allow create, update, delete: if isManager();
    }
    
    // System settings (admin only)
    match /settings/{document=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
